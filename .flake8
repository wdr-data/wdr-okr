[flake8]
ignore =
    # Line length, controlled by black
    E501,
    # Line break before binary operator, controlled by black
    W503,
    # Whitespace before ':', controlled by black
    E203,
    # Yeah, this is not happening (complexity)
    C901,

max-complexity: 10

per-file-ignores =
    worker.py:E402

exclude =
    ./stuff/*  # Local test scripts etc.
